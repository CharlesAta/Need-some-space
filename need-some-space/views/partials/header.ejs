<!DOCTYPE html>
<html>
  <head>
    <title>Need Some Space</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <!-- Google Icon Fonts used by Materialize -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <!-- Materialize CSS Framework -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">
    <!-- JavaScript for Materialize -->
    <script defer src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script defer src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
    <script defer src="/javascripts/script.js"></script>
  </head>
  <body>
    <div class="navbar-fixed">
      <nav id="nav-color" class=" <% if (typeof index !== 'undefined') { %> transparent <% } %> nav-wrapper">
          <div class="container"><% if (typeof index === 'undefined') { %>
          <a href="/" class="brand-logo"><p class="flow-text">NEED SOME SPACE</p></a>
          <% } %>
          <a href="#" class="sidenav-trigger" data-target="mobile-links">
            <i class="material-icons grey-text text-darken-1">menu</i>
          </a>
          <!-- Add login UI here -->
          <ul class="right hide-on-med-and-down">
            <% if (user) { %>

              <li>
                <a href="/#nasa-apod" class="<% if (typeof index !== 'undefined') { %> show-login <% } %>">NASA APOD</a>
              </li>
              <li>
                <a href="/#articles" class="<% if (typeof index !== 'undefined') { %> show-login <% } %>">Articles</a>
              </li>
            <li>
              <a href="/articles/new" class="<% if (typeof index !== 'undefined') { %> show-login white-text <% } %>">Create Article</a>
            </li>
            <li>
              <a href="/users/<%= user._id %>" class="<% if (typeof index !== 'undefined') { %> show-login <% } else { %> btn-floating light-blue darken-3 waves-effect waves-orange <% } %>"><% if (typeof index !== 'undefined') { %>Profile<% } else { %><i class="material-icons  teal-text text-lighten-5">person</i><% } %></a>
            </li>
            <li>
              <a href="/logout" class="<% if (typeof index !== 'undefined') { %> show-login white-text <% } %>">Log Out</a>
            </li>
            <% } else { %>
                <li>
                  <a href="/#nasa-apod" class="<% if (typeof index !== 'undefined') { %> show-login <% } %>">NASA APOD</a>
                </li>
                <li>
                  <a href="/#articles" class="<% if (typeof index !== 'undefined') { %> show-login <% } %>">Articles</a>
                </li>
                <li>
                  <a href="/auth/google" class="<% if (typeof index !== 'undefined') { %> show-login white-text <% } %>">Login</a>
                </li>
            <% } %>
          </ul>
        </div>
      </nav>
    </div>

    <ul class="sidenav grey lighten-2" id="mobile-links">
      <% if (user) { %>
        <li>
          <a href="/#nasa-apod">NASA APOD</a>
        </li>
        <li>
          <a href="/#articles">Articles</a>
        </li>
        <li>
          <a href="/articles/new">Create Article</a>
        </li>
        <li>
          <a href="/users/<%= user._id %>">Profile</a>
        </li>
        <li>
          <a href="/logout">Log Out</a>
        </li>
        <% } else { %>
        <li>
          <a href="/#nasa-apod">NASA APOD</a>
        </li>
        <li>
          <a href="/#articles">Articles</a>
        </li>
        <li>
          <a href="/auth/google">Login</a>
        </li>
        <% } %>
    </ul>