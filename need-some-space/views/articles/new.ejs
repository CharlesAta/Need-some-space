<%- include('../partials/header') %>
<h1>Create a New Article</h1>
<form action="/articles" method="POST" enctype="multipart/form-data">
    <label for="title">Title:
        <input type="text" name="title" placeholder="Enter article title" required>
    </label><br>
    <label for="author">Author:
        <input type="text" name="author" placeholder="Enter article author">
    </label><br>
    <label for="source">Source:
        <input type="url" name="source" placeholder="Enter article source">
    </label><br>
    <label for="Image">Image:
        <input type="file" name="image">
    </label><br>
    <label for="content">
        <textarea name="content" placeholder="Enter article content" required></textarea>
    </label>
    <input type="submit" value="Post Article">
    </form>
<%- include('../partials/footer') %>