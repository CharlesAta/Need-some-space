<%- include('../partials/header') %>
<h1>Create a New Article</h1>
<div class="container">
<form action="/articles" method="POST" enctype="multipart/form-data">
    <label for="title">Title:
        <input type="text" name="title" placeholder="Enter article title" maxlength="60" required>
    </label><br>
    <label for="author">Author:
        <input type="text" name="author" placeholder="Enter article author" maxlength="30">
    </label><br>
    <label for="source">Source:
        <input type="url" name="source" placeholder="Enter article source">
    </label><br>
    <label for="Image">Image:
        <input type="file" name="image">
    </label><br>
    <label for="content">
        <textarea name="content" placeholder="Enter article content" maxlength="20000" required></textarea>
    </label>
    <button type="submit" class="btn light-green white-text waves-effect waves-yellow"><i class="material-icons left white-text">send</i>POST</button>
    </form>
</div>
<%- include('../partials/footer') %>